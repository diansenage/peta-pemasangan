<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Peta Pemasangan Indonesia</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- Leaflet CSS & JS -->
  <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css"/>
  <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
  <!-- Heatmap plugin -->
  <script src="https://unpkg.com/leaflet.heat/dist/leaflet-heat.js"></script>
  <style>
    body { margin:0; padding:0; }
    #map { width:100%; height:100vh; }
  </style>
</head>
<body>
  <div id="map"></div>
  <script>
    // 1. Inisialisasi peta (pusat Indonesia)
    const map = L.map("map").setView([-2.2100, 117.9213], 4);

    // 2. Tile gratis dari OpenStreetMap
    L.tileLayer("https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png", {
      maxZoom: 18,
      attribution: "&copy; OpenStreetMap contributors"
    }).addTo(map);

    // 3. Data pemasangan (koordinat + jumlah unit)
    const pemasangan = [
      { lokasi: "Sumatera", koordinat: [0.5, 101.5], jumlah: 3000 },
      { lokasi: "Jabodetabek & Jawa", koordinat: [-7.5, 110.3671], jumlah: 7000 },
      { lokasi: "Sulawesi & Maluku", koordinat: [-1.5, 122.0], jumlah: 500 },
      { lokasi: "Bali & Nusa Tenggara", koordinat: [-8.5, 117.3], jumlah: 500 },
      { lokasi: "Kalimantan", koordinat: [-1.0, 114.0], jumlah: 300 },
      { lokasi: "Papua", koordinat: [-4.5, 138.0], jumlah: 200 }
    ];

    // 4. Tambahkan marker + popup
    pemasangan.forEach(item => {
      L.marker(item.koordinat)
        .addTo(map)
        .bindPopup("<b>" + item.lokasi + "</b><br/>Jumlah: " + item.jumlah + " Unit");
    });

    // 5. Buat data untuk heatmap: [lat, lng, intensitas]
    const heatData = pemasangan.map(item => [
      item.koordinat[0],
      item.koordinat[1],
      item.jumlah / 7000 // normalisasi (dibagi max jumlah = 7000)
    ]);

    // 6. Tambahkan heatmap layer
    L.heatLayer(heatData, {
      radius: 40,   // besar penyebaran titik
      blur: 25,     // efek blur
      maxZoom: 10,  // zoom maksimum
      gradient: {   // warna heatmap
        0.2: "blue",
        0.4: "lime",
        0.6: "yellow",
        0.8: "orange",
        1.0: "red"
      }
    }).addTo(map);
  </script>
</body>
</html>
